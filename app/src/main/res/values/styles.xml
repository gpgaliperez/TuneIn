<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryDark">@color/secundario</item>

        <item name="colorPrimaryVariant">@color/secundario</item>
        <item name="colorOnBackground">@color/fondo</item>
        <item name="colorError">@color/colorError</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="nombreApp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">@dimen/tamaño_nombreApp</item>
    </style>

    <style name="nombreAppRegistrarse" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">@dimen/tamaño_nombreAppRegistrarse</item>
    </style>

    <style name="hints" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/tamaño_hints</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>

    </style>

    <!--Drawer -->
    <style name="nombreUsuario" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/tamaño_nombreUsuario</item>
    </style>

    <style name="opcionesDrawer" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/tamaño_opcionesDrawer</item>
    </style>
    <!--Drawer -->

    <style name="encabezado" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/tamaño_encabezado</item>
    </style>

    <style name="artistas" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/tamaño_artistas</item>
    </style>

    <style name="tituloyArtistaSeleccionado" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>s
        <item name="android:textSize">@dimen/tamaño_tituloyArtistaSeleccionado</item>
    </style>

    <style name="tituloConcierto" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_blackitalic</item>
        <item name="android:textSize">@dimen/tamaño_tituloConcierto</item>
    </style>

    <style name="detalleConcierto" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_mediumitalic</item>
        <item name="android:textSize">@dimen/tamaño_detalleConcierto</item>

    </style>

    <style name="botones" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/principal</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/tamaño_botones</item>
    </style>


    <!-- Perfil Artista -->
    <style name="nombreArtistaPerfil" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/tamaño_nombreArtista</item>
    </style>

    <style name="detalleArtistaPerfil" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/colorHint</item>
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:textSize">@dimen/tamaño_detalleArtista</item>
    </style>

    <style name="opcionesUsuario" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/tamaño_opcionesUsuario</item>
    </style>





</resources>